<div class="container mx-auto px-3 sm:px-4 md:px-5 py-6 sm:py-8 max-w-6xl">
  <!-- Header -->
  <div class="mb-6 sm:mb-8 md:mb-10">
    <div class="flex items-center gap-3 sm:gap-4 mb-4 sm:mb-6">
      <%= link_to root_path, class: "btn btn-ghost btn-sm" do %>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 19l-7-7m0 0l7-7m-7 7h18"
          />
        </svg>
        返回首页
      <% end %>
    </div>

    <div class="flex items-center gap-3 sm:gap-4 md:gap-6 mb-4 sm:mb-6">
      <div
        class="
          h-14 w-14 sm:h-16 sm:w-16 md:h-20 md:w-20 flex items-center justify-center bg-gradient-to-br
          from-primary/20 to-primary/10 rounded-xl sm:rounded-2xl shadow-sm sm:shadow-md md:shadow-lg
        "
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-8 w-8 sm:h-10 sm:w-10 md:h-12 md:w-12 text-primary"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
          />
        </svg>
      </div>

      <div class="flex-1 min-w-0">
        <h1
          class="
            text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold
            text-base-content mb-2 sm:mb-3
          "
        >
          开发经验记录
        </h1>

        <p
          class="
            text-sm sm:text-base md:text-lg text-base-content/70
            leading-relaxed
          "
        >
          记录开发过程中遇到的疑难问题和解决方案，便于后续遇到类似问题时快速参考
        </p>
      </div>
    </div>
  </div>

  <!-- Experiences List -->
  <% if @experiences.any? %>
    <div class="grid gap-3 sm:gap-4 md:gap-6 md:grid-cols-2 lg:grid-cols-3">
      <% @experiences.each_with_index do |experience, index| %>
        <%
          # 根据索引循环使用不同的颜色主题
          color_themes = [
            { bg: "from-primary/20 to-primary/10", icon: "text-primary" },
            { bg: "from-secondary/20 to-secondary/10", icon: "text-secondary" },
            { bg: "from-accent/20 to-accent/10", icon: "text-accent" },
            { bg: "from-info/20 to-info/10", icon: "text-info" },
            { bg: "from-success/20 to-success/10", icon: "text-success" },
            { bg: "from-warning/20 to-warning/10", icon: "text-warning" }
          ]
          theme = color_themes[index % color_themes.length]
        %>

        <%= link_to experience_path(experience[:id]), 
            class: "card bg-base-200/50 sm:bg-base-100 shadow-none sm:shadow-md md:shadow-xl hover:bg-base-200/70 sm:hover:bg-base-100 sm:hover:shadow-xl md:hover:shadow-2xl transition-all duration-300 md:hover:-translate-y-1 border border-base-300/10 sm:border-base-300/50 md:border-base-300/50 rounded-lg sm:rounded-xl group" do %>
          <div class="card-body p-4 sm:p-5 md:p-6">
            <!-- Icon and Title -->
            <div class="flex items-start gap-3 sm:gap-4 mb-3 sm:mb-4">
              <div class="shrink-0">
                <div class="h-12 w-12 sm:h-14 sm:w-14 flex items-center justify-center bg-gradient-to-br <%= theme[:bg] %> rounded-lg sm:rounded-xl md:group-hover:scale-110 transition-transform duration-300">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6 sm:h-7 sm:w-7 md:h-8 md:w-8 <%= theme[:icon] %>"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                    />
                  </svg>
                </div>
              </div>

              <div class="flex-1 min-w-0">
                <h2
                  class="
                    card-title text-base sm:text-lg md:text-xl mb-2 group-hover:text-primary
                    transition-colors line-clamp-2
                  "
                >
                  <%= experience[:title] %>
                </h2>
              </div>
            </div>

            <!-- Date and Tags -->
            <div class="space-y-2 sm:space-y-3 mb-3 sm:mb-4">
              <% if experience[:date] %>
                <div
                  class="
                    flex items-center gap-2 text-xs sm:text-sm
                    text-base-content/60
                  "
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-3 w-3 sm:h-4 sm:w-4"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                    />
                  </svg>

                  <span><%= experience[:date].strftime("%Y年%m月%d日") %></span>
                </div>
              <% end %>

              <% if experience[:problem_type] %>
                <div class="flex flex-wrap gap-1.5 sm:gap-2">
                  <% experience[:problem_type].split(/[、,]/).each do |type| %>
                    <span
                      class="
                        badge badge-outline badge-xs sm:badge-sm
                        hover:badge-primary transition-colors
                      "
                    >
                      <%= type.strip %>
                    </span>
                  <% end %>
                </div>
              <% end %>
            </div>

            <!-- Action Button -->
            <div
              class="
                card-actions justify-end mt-auto pt-3 sm:pt-4 border-t
                border-base-300/50
              "
            >
              <span
                class="
                  btn btn-outline btn-primary btn-xs sm:btn-sm
                  hover:btn-primary transition-all
                "
              >
                查看详情
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="
                    h-3 w-3 sm:h-4 sm:w-4 ml-1 group-hover:translate-x-1
                    transition-transform
                  "
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"
                  />
                </svg>
              </span>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div
      class="
        card bg-base-100 shadow-sm sm:shadow-md md:shadow-xl border
        border-base-300/50
      "
    >
      <div class="card-body text-center py-12 sm:py-16">
        <div class="flex justify-center mb-4">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-12 w-12 sm:h-16 sm:w-16 text-base-content/20"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
            />
          </svg>
        </div>

        <p class="text-base-content/60 text-base sm:text-lg">暂无经验记录</p>
        <p class="text-base-content/40 text-xs sm:text-sm mt-2">开始记录你的开发经验吧</p>
      </div>
    </div>
  <% end %>
</div>
