<% content_for :head do %>
  <%= stylesheet_link_tag "highlight/github-light", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "highlight/github-dark", "data-turbo-track": "reload" %>
<% end %>

<div class="container mx-auto px-3 sm:px-4 md:px-5 py-6 sm:py-8 max-w-5xl">
  <!-- Header -->
  <div class="mb-6 sm:mb-8">
    <div class="flex items-center gap-3 sm:gap-4 mb-3 sm:mb-4">
      <%= link_to experiences_path, class: "btn btn-ghost btn-sm" do %>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 19l-7-7m0 0l7-7m-7 7h18"
          />
        </svg>
        返回经验列表
      <% end %>
    </div>

    <div class="mb-4 sm:mb-6">
      <div class="flex items-center gap-3 sm:gap-4 mb-3 sm:mb-4">
        <div
          class="
            h-12 w-12 sm:h-14 sm:w-14 md:h-16 md:w-16 flex items-center justify-center bg-gradient-to-br
            from-primary/20 to-primary/10 rounded-lg shrink-0
          "
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-7 w-7 sm:h-8 sm:w-8 md:h-10 md:w-10 text-primary"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
            />
          </svg>
        </div>

        <div class="flex-1 min-w-0">
          <h1
            class="
              text-xl sm:text-2xl md:text-3xl lg:text-4xl font-bold
              text-base-content mb-2
            "
          >
            <%= @experience[:title] %>
          </h1>

          <div
            class="
              flex flex-wrap items-center gap-2 sm:gap-3 md:gap-4 text-xs
              sm:text-sm text-base-content/70
            "
          >
            <% if @experience[:date] %>
              <div class="flex items-center gap-1">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-3 w-3 sm:h-4 sm:w-4"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                  />
                </svg>

                <%= @experience[:date].strftime("%Y-%m-%d") %>
              </div>
            <% end %>

            <% if @experience[:problem_type] %>
              <div class="flex flex-wrap gap-1.5 sm:gap-2">
                <% @experience[:problem_type].split(/[、,]/).each do |type| %>
                  <span class="badge badge-outline badge-xs sm:badge-sm">
                    <%= type.strip %>
                  </span>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Content -->
  <div
    class="
      card bg-base-100 shadow-none sm:shadow-md md:shadow-xl border-0
      sm:border md:border border-base-300/50
    "
  >
    <div class="card-body p-4 sm:p-6 md:p-8 lg:p-12">
      <div class="markdown-body prose" data-controller="highlight">
        <%= raw @html_content %>
      </div>
    </div>
  </div>
</div>
