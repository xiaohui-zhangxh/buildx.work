<div class="mb-6">
  <h1 class="text-3xl font-bold">角色详情</h1>
</div>

<div class="card bg-base-100 shadow">
  <div class="card-body">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <label class="label">
          <span class="label-text font-semibold">名称</span>
        </label>
        <div class="text-lg"><span class="badge badge-primary"><%= @role.name %></span></div>
      </div>
      <div>
        <label class="label">
          <span class="label-text font-semibold">描述</span>
        </label>
        <div class="text-lg"><%= @role.description || "-" %></div>
      </div>
      <div>
        <label class="label">
          <span class="label-text font-semibold">用户数</span>
        </label>
        <div class="text-lg"><%= @role.users.count %></div>
      </div>
      <div>
        <label class="label">
          <span class="label-text font-semibold">创建时间</span>
        </label>
        <div class="text-lg"><%= @role.created_at.strftime("%Y-%m-%d %H:%M:%S") %></div>
      </div>
    </div>
    <div class="mt-6 flex gap-4">
      <%= link_to "编辑", edit_admin_role_path(@role), class: "btn btn-primary" %>
      <%= link_to "返回列表", admin_roles_path, class: "btn btn-ghost" %>
    </div>
  </div>
</div>

<div class="card bg-base-100 shadow mt-6">
  <div class="card-body">
    <h2 class="card-title">拥有此角色的用户</h2>
    <div class="overflow-x-auto">
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>邮箱</th>
            <th>姓名</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% if @role.users.any? %>
            <% @role.users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.email_address %></td>
                <td><%= user.name || "-" %></td>
                <td>
                  <%= link_to "查看", admin_user_path(user), class: "btn btn-sm btn-ghost" %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="4" class="text-center text-base-content/60">暂无用户</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

