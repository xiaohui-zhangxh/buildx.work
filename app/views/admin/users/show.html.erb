<div class="mb-6">
  <h1 class="text-3xl font-bold">用户详情</h1>
</div>

<div class="card bg-base-100 shadow">
  <div class="card-body">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <label class="label">
          <span class="label-text font-semibold">邮箱</span>
        </label>
        <div class="text-lg"><%= @user.email_address %></div>
      </div>
      <div>
        <label class="label">
          <span class="label-text font-semibold">姓名</span>
        </label>
        <div class="text-lg"><%= @user.name || "-" %></div>
      </div>
      <div>
        <label class="label">
          <span class="label-text font-semibold">角色</span>
        </label>
        <div>
          <% if @user.roles.any? %>
            <% @user.roles.each do |role| %>
              <span class="badge badge-primary"><%= role.name %></span>
            <% end %>
          <% else %>
            <span class="text-base-content/60">无</span>
          <% end %>
        </div>
      </div>
      <div>
        <label class="label">
          <span class="label-text font-semibold">注册时间</span>
        </label>
        <div class="text-lg"><%= @user.created_at.strftime("%Y-%m-%d %H:%M:%S") %></div>
      </div>
    </div>
    <div class="mt-6 flex gap-4">
      <%= link_to "编辑", edit_admin_user_path(@user), class: "btn btn-primary" %>
      <%= link_to "返回列表", admin_users_path, class: "btn btn-ghost" %>
    </div>
  </div>
</div>

